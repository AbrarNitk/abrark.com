<script>
    document.addEventListener('DOMContentLoaded', function() {
        const mobileMenuToggle = document.getElementById('mobile-menu-toggle');
        const sidebarToggleFixed = document.getElementById('sidebar-toggle-fixed');
        const closeSidebar = document.getElementById('close-sidebar');
        const sidebar = document.getElementById('sidebar');
        const sidebarOverlay = document.getElementById('sidebar-overlay');
        
        // Search elements
        const searchToggle = document.getElementById('search-toggle');
        const searchOverlay = document.getElementById('search-overlay');
        const closeSearch = document.getElementById('close-search');
        const mobileSearchInput = document.getElementById('mobile-search-input');
        
        // TOC elements
        const tocContent = document.querySelector('.toc-content');
        const activeItem = document.querySelector('.sidebar-item.active');
        
        // Scroll the active item into view when page loads
        if (activeItem && tocContent) {
            // Use a slight delay to ensure DOM is fully rendered
            setTimeout(() => {
                // Get the position of the active item relative to the TOC container
                const itemPosition = activeItem.offsetTop;
                const containerHeight = tocContent.clientHeight;
                
                // Scroll to position the active item in the visible area
                // with some padding to not position it at the exact top
                tocContent.scrollTop = Math.max(0, itemPosition - containerHeight / 4);
            }, 100);
        }
        
        // Function to toggle sidebar
        function toggleSidebar() {
            sidebar.classList.toggle('open');
            sidebarOverlay.classList.toggle('open');
            document.body.classList.toggle('overflow-hidden');
        }
        
        // Function to close sidebar
        function closeSidebarFunc() {
            sidebar.classList.remove('open');
            sidebarOverlay.classList.remove('open');
            document.body.classList.remove('overflow-hidden');
        }
        
        // Function to toggle search
        function toggleSearch() {
            searchOverlay.classList.toggle('open');
            if (searchOverlay.classList.contains('open')) {
                mobileSearchInput.focus();
                document.body.classList.add('overflow-hidden');
            } else {
                document.body.classList.remove('overflow-hidden');
            }
        }
        
        // Function to close search
        function closeSearchFunc() {
            searchOverlay.classList.remove('open');
            document.body.classList.remove('overflow-hidden');
        }
        
        // Toggle sidebar on hamburger menu click
        if (mobileMenuToggle) {
            mobileMenuToggle.addEventListener('click', toggleSidebar);
        }
        
        // Toggle sidebar on floating button click
        if (sidebarToggleFixed) {
            sidebarToggleFixed.addEventListener('click', toggleSidebar);
        }
        
        // Close sidebar when X button is clicked
        if (closeSidebar) {
            closeSidebar.addEventListener('click', closeSidebarFunc);
        }
        
        // Close sidebar when overlay is clicked
        sidebarOverlay.addEventListener('click', closeSidebarFunc);
        
        // Toggle search overlay
        if (searchToggle) {
            searchToggle.addEventListener('click', toggleSearch);
        }
        
        // Close search when X button is clicked
        if (closeSearch) {
            closeSearch.addEventListener('click', closeSearchFunc);
        }
        
        // Close search on ESC key
        document.addEventListener('keydown', function(event) {
            if (event.key === 'Escape') {
                closeSearchFunc();
                closeSidebarFunc();
            }
        });
        
        // Close sidebar on window resize (if width becomes larger than mobile breakpoint)
        window.addEventListener('resize', function() {
            if (window.innerWidth >= 768) {
                closeSidebarFunc();
                closeSearchFunc();
            }
        });

        // Close sidebar when clicking a link inside it (on mobile)
        const sidebarLinks = sidebar.querySelectorAll('a');
        if (window.innerWidth < 768) {
            sidebarLinks.forEach(link => {
                link.addEventListener('click', closeSidebarFunc);
            });
        }
        
        // Enhance the sidebar toggle button with hover effect
        if (sidebarToggleFixed) {
            sidebarToggleFixed.addEventListener('mouseenter', function() {
                this.style.transform = 'translateY(-5px)';
                this.style.boxShadow = '0 6px 20px rgba(59, 130, 246, 0.6)';
            });
            
            sidebarToggleFixed.addEventListener('mouseleave', function() {
                this.style.transform = 'translateY(0)';
                this.style.boxShadow = '0 4px 15px rgba(59, 130, 246, 0.5)';
            });
        }
    });
</script>
</body>
